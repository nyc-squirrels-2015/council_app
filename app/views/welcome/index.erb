<!-- background images on this page -->
<!DOCTYPE html>
<html>
<head>
  <title>council_app</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <meta name="apple-mobile-web-app-capable" content="yes">
  <%= javascript_include_tag "application" %>

  <%= favicon_link_tag 'favicon.ico' %>

  <%= csrf_meta_tags %>

  <link href='http://fonts.googleapis.com/css?family=Pacifico' rel='stylesheet' type='text/css'>

<meta name="viewport" content="width=device-width, initial-scale=1">

</head>
<body>

  <div class='container'>
    <div id="rotating-item-wrapper">
     <%= image_tag("hair.jpg", class: "rotating-item")%>
     <%= image_tag("food.jpg", class: "rotating-item")%>
     <%= image_tag("skateboard.jpg", class: "rotating-item")%>
     <%= image_tag("travel.jpg", class: "rotating-item")%>
    </div>

    <div class="viewport-center">
      <% if flash[:error] %>
        <div class="center welcome_flash_error"><%= flash[:error] %></div>
      <% end %>
      <h3 id="welcome-text">Welcome<br> to<br><span class="logo-title large">Council</span></h3>
      <!-- this text will only appear when form is toggle display: none -->

      <div id="login-form">
        <%= render partial: 'sessions/new', locals: {user: @user} %>
      </div>
      <div id="sign-up-form">
        <%= render partial: 'users/new', locals: {user: @user} %>
      </div>

      <div class="center welcome-btns">
        <button id="login-btn">Login</button>
        <button id="sign-up-btn">Sign Up</button>
      </div>
    </div>
  </div>
</body>
</html>


