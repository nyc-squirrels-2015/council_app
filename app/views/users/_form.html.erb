<%= form_for @user do |f| %>
  <%= f.label(:firstname, 'First Name') %>
  <%= f.text_field(:firstname) %>
  <%= f.label(:lastname, 'Last Name') %>
  <%= f.text_field(:lastname) %>
  <%= f.label(:email, 'Email') %>
  <%= f.text_field(:email) %>
  <%= f.label(:password, 'Password') %>
  <%= f.password_field(:password) %>
  <%= f.submit %>
<% end %>
