<div class="page-center">
  <% if @friendship.user.id != current_user.id %>
  <strong><%= @friendship.user.firstname %> <%= @friendship.user.lastname %></strong>
  wants to be friends
  <%= button_to 'Confirm', confirm_path(@friendship.id), method: :put %>
  <% else %>
  <h5>Invite sent to <strong><%= @friendship.friend.firstname %> <%= @friendship.friend.lastname %></strong></h5>
  <% end %>
</div>